<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Calcular"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="191dp"
        android:layout_height="55dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:text="Calculadora"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        android:text="Calcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_restar" />

    <EditText
        android:id="@+id/et_n1"
        android:layout_width="149dp"
        android:layout_height="56dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:hint="@string/et_n1"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_n2"
        android:layout_width="151dp"
        android:layout_height="56dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/et_n2"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_n1" />

    <CheckBox
        android:id="@+id/cb_sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="4dp"
        android:text="sumar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_n2" />

    <CheckBox
        android:id="@+id/cb_restar"
        android:layout_width="80dp"
        android:layout_height="49dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="4dp"
        android:text="restar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_sumar" />

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="44dp"
        android:hint="@string/txview"
        android:text="RESULTADO"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calcular" />

    <TextView
        android:id="@+id/tv_result2"
        android:layout_width="327dp"
        android:layout_height="53dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:hint="@string/txview2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_resultado" />
</androidx.constraintlayout.widget.ConstraintLayout>